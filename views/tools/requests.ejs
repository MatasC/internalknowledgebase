     <link rel="stylesheet" type="text/css" href="css/login.css">
<body class="my-login-page">
<% if (!submited){ %>
  <section class="h-100">
    <div class="container h-100">
      <div class="row justify-content-md-center h-100">
        <div class="card-wrapper">
          <div class="brand">
            <img src="img/logo.jpg" alt="bootstrap 4 login page">
          </div>
          <div class="card fat">
            <div class="card-body">
              <h4 class="card-title">Server Request Form</h4>
                <form action = "" method = "POST">
                    <div class="form-group">
                    <label for="exampleSelect1"><span class = "text-danger">*</span>Select Server Type</label>
                        <select class="form-control form-control-sm" id="exampleSelect1" name = "server_type" required/>
                            <option value = "">Select Server type</option>
                            <option value = "Regular">Regular</option>
                            <option value = "Dedicated">Dedicated</option>
                        <option value = "Obfuscated">Obfuscated</option>
                            <option value = "Double">Double VPN</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label col-form-label-sm" for="inputSmall"><span class = "text-danger">*</span>Country / Region</label>
                        <input class="form-control form-control-sm" type="text" name = "region" placeholder="Country , Region... Why not both?" id="inputSmall" required/>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label col-form-label-sm" for="inputSmall">City</label>
                        <input class="form-control form-control-sm datepicker" type="text" name = "city" placeholder="City" value = " " id="inputSmall"/>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label col-form-label-sm" for="inputSmall">Email Address</label>
                        <input class="form-control form-control-sm datepicker" type="text" name = "email" value = " " placeholder="Email address." id="inputSmall"/>
                    </div>
                    <hr />
                    <p><span class = "text-danger">*</span> Marked fields are required, others are optional.</p>
                    <button class = "btn btn-success btn-block btn-sm" id = "submit_server_request">Submit</button>
                </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

<%} else {%>
    
    <section class = "container">
        <div class = "alert alert-success">
            <p>Thank you, your form has been submited successfully!</p>
        </div>
    </section>

<%}%>
